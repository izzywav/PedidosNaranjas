<Window x:Class="Pedidos.view.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pedidos"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Elige una opción:"
       Grid.Row="0"
       HorizontalAlignment="Left" VerticalAlignment="Top"
       FontSize="22" FontWeight="Medium" Margin="246,75,0,0"/>
        <Button x:Name="btnNew"
                Content="PEDIDO NUEVO"
                HorizontalAlignment="Center" Margin="0,154,0,0" VerticalAlignment="Top"
                Width="308" Height="61"
                Click="Button_Click"
                Background="Azure"
                FontSize="15"/>
        <Button x:Name="btnModifyDelete" 
                Content="MODIFICAR O BORRAR"
                HorizontalAlignment="Center" Margin="0,234,0,0" VerticalAlignment="Top"
                Width="308" Height="63"
                Click="Button_Click"
                Background="Azure"
                FontSize="15"/>
    </Grid>
</Window>
